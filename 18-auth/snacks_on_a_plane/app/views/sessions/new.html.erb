<h1>login</h1>

<%= form_with scope: :session, url: '/login' do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Login" %>

    <% if @errors %>
        <% @errors.each do |error|%>
            <%= error %>
        <% end %>
    <% end %>
<% end %>