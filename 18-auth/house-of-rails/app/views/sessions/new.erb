<h1>Login</h1>

<%= form_with scope: :session, url: '/login', html: { class: "form" } do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <br>
    <%= f.submit "Login" %>
    <% if @errors %>
        <% @errors.each do |error|%>
            <%= error %>
        <% end %>
    <% end %>
<% end %>